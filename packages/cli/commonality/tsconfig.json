{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": false,
    "declaration": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "target": "es2015"
  },
  "include": ["src/**/*.ts", "src/commands/validate.ts"],
  "exclude": ["node_modules"]
}
