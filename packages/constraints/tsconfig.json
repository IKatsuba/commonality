{
	"extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"./types"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		]
	},
}
